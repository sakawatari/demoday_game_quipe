<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h1>おすすめ</h1>

    <h2>新着記事</h2>
    <% @recommends.each do |recommend| %>
      <%= recommend.title %>
      <%= recommend.user.name %>
      <%= link_to 'Show', recommend %>
