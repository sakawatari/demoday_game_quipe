<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
    <h2>パスワードを変更する</h2>
    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
      </div>
      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn-login btn-block"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
