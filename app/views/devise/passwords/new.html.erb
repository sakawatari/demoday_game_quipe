<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
    <h2>パスワード再設定</h2>
    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="actions">
        <%= f.submit "再設定メールを送信する", class: "btn-login btn-block"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
