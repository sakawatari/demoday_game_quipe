<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
    <h1>新規登録</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザーネーム" %>
      </div>

      <div class="field">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード(6文字以上)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "確認用パスワード（もう一度入力してください）" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn-login btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <h1>Game Quipe<br>ユーザー参加型ゲーム検索サービス</h1>
    <h3>検索機能</h3>
    <h4>様々な検索スタイル</h4>
    <h4>ストック・お気に入り機能</h4>
    <h3>スケジュール機能</h3>
    <h4>発売日の確認</h4>
    <h4>通知機能</h4>
    <h3>おすすめ機能</h3>
    <h4>おすすめ投稿</h4>
    <h3>データベース機能</h3>
    <h4>アクティブなデータ</h4>

  </div>
</div>
